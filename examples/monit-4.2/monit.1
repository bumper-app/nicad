\&\fIpassive\fR, \fImanual\fR, \fIdepends\fR, \fIhost\fR, \fIdefault\fR, \fIhttp\fR,
\&\fIftp\fR, \fIsmtp\fR, \fIpop\fR, \fInntp\fR, \fIimap\fR, \fIssh\fR, \fIdwp\fR,
\&\fIldap2\fR, \fIldap3\fR, \fIrequest\fR, \fIcpu\fR, \fImem\fR, \fItotalmem\fR,
